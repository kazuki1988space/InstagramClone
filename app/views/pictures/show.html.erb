<div class="mainContainer">
  <h1 class="pageTitle instaShow">投稿詳細</h1>
  <div class="container instaShow">
      <div class="instaShow-content"><%= @picture.content %></div>
      <div class="instaShow-image"><%= image_tag(@picture.image.url) if @picture.image.present? %></div>
      <div class="instaShow-user">Created By <span><%= @picture.user.name %></span></div>
      <div class="instaShow-icon"><%= image_tag(@picture.user.image.thumb.url) if @picture.user.image.present? %></span></div>
      <div class="instashow-updated_at">Last Updated_at <%= @picture.updated_at %></div>
  </div>

  <% unless @picture.user == current_user %>
    <div class="page-link favorites">
    <% if @favorite.present? %>
      <%= link_to "お気に入りから外す", favorite_path(picture_id: @picture.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to "お気に入りに追加する", favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
    </div>
  <% end %>

  <div class="page-link toInstaIndex">
  <%= link_to "投稿一覧へ戻る", pictures_path, class: 'btn btn-default'  %>
  </div>
</div>
